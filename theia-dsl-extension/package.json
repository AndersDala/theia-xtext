{
  "name": "theia-dsl-extension",
  "version": "1.0.0",
  "description": "An extension for Theia connection language support for an Xtext DSL",
  "author": "typefox.io",
  "license": "Apache-2.0",
  "keywords": [
    "theia-extension"
  ],
  "dependencies": {
    "monaco-editor": "^0.8.3",
    "monaco-editor-core": "^0.8.2",
    "monaco-languages": "^0.7.0",
    "theia-core": "file:../../theia"
  },
  "scripts": {
    "prepublish": "npm run copy-ls && npm run build",
    "copy-ls": "rm -rf ./build && mkdir build && cp ../io.typefox.xtext.langserver.example.parent/io.typefox.xtext.langserver.example.ide/build/libs/dsl-language-server.jar ./build",
    "clean": "rimraf lib",
    "lint": "tslint -c ../tslint.json --project ./tsconfig.json",
    "build": "tsc && npm run lint",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "files": [
    "lib",
    "src",
    "build"
  ]
}
