{
  "private": true,
  "name": "theia-dsl-app",
  "dependencies": {
    "electron": "^1.6.2",
    "monaco-css": "^1.3.1",
    "monaco-editor": "^0.8.3",
    "monaco-editor-core": "^0.8.2",
    "monaco-html": "^1.2.1",
    "monaco-json": "^1.2.2",
    "monaco-languages": "^0.7.0",
    "monaco-typescript": "^2.1.2",
    "reflect-metadata": "^0.1.10",
    "theia": "file:../../Theia",
    "theia-dsl-extension": "file:../theia-dsl-extension"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint -c ../tslint.json --project ./tsconfig.json",
    "build": "npm run build:app && npm run build:web",
    "build:app": "tsc && npm run lint",
    "build:web": "webpack && cp src/web/index.html lib/web",
    "build:electron": "npm run build:app && webpack --target electron && cp src/electron/index.html lib/electron",
    "start:app": "node ./lib/app.js",
    "start:web": "concurrently \"npm run start:app\" \"webpack-dev-server --open\"",
    "start:electron": "electron ./lib/electron/electron-main.js",
    "cold:start:web": "npm run clean && npm run build:app && npm run build:web && npm run start:web",
    "cold:start:electron": "npm run clean && npm run build:app && npm run build:electron && npm run start:electron",
    "watch:app": "tsc --watch",
    "watch:web": "npm run build:web && webpack --watch"
  },
  "devDependencies": {
    "circular-dependency-plugin": "^3.0.0",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.1",
    "file-loader": "^0.11.1",
    "rimraf": "^2.6.1",
    "selenium-standalone": "^6.2.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.17.0",
    "ts-loader": "^2.0.3",
    "ts-node": "^3.0.2",
    "tslint": "^4.5.1",
    "tslint-loader": "^3.4.3",
    "typescript": "^2.3.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^4.1.0"
  }
}
